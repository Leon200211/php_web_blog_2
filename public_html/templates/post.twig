
{% extends 'base.twig' %}


{% block body %}
    <div class="container">

        <img src="https://picsum.photos/1200/400" class="img-fluid">
        <h1 class="mt-3 mb-3">{{ post.title|escape }}</h1>
        <div class="container mb-3">
            <div class="row">
                <span class="text-muted">Leon | {{ post.published_date|date("F d, Y") }}</span>
            </div>
        </div>
        <div>
            {{ post.content|raw }}
        </div>

    </div>
{% endblock %}
